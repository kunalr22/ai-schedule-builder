generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

model Event {
  id              Int           @id @default(autoincrement())
  clerkId         String
  title           String
  description     String?
  location        String?
  recurrenceRule  String?
  completed       Boolean       @default(false)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  overridedEvent  Event?        @relation("Event", fields: [overrideId], references: [id])
  overrideId      Int?
  overriddenBy    Event[]       @relation("Event")
}
